<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>
            <gradient
                android:startColor="#EEF2FF"
                android:endColor="#FFFFFF"
                android:angle="270"/>
        </shape>
    </item>


    <item
        android:top="-120dp"
        android:left="-120dp">
        <shape android:shape="oval">
            <size
                android:width="260dp"
                android:height="260dp"/>
            <solid android:color="#A5B4FC"/>
        </shape>
    </item>


    <item
        android:bottom="-100dp"
        android:right="-100dp">
        <shape android:shape="oval">
            <size
                android:width="220dp"
                android:height="220dp"/>
            <solid android:color="#BFDBFE"/>
        </shape>
    </item>

</layer-list>


